<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/loginpage">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E1D89F"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/rachelbrown"
                android:hint="Name"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textColorHint="#D3CFCF" />

            <EditText
                android:id="@+id/phone_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/rachelbrown"
                android:hint="Phone"
                android:padding="15dp"
                android:textColorHint="#D3CFCF" />
            <EditText
                android:id="@+id/email_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/rachelbrown"
                android:hint="Email"
                android:padding="15dp"
                android:textColorHint="#D3CFCF" />
            <EditText
                android:id="@+id/password_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/rachelbrown"
                android:hint="Password"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textColorHint="#D3CFCF" />

                <Button
                    android:id="@+id/signin_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D89216"
                    android:layout_marginTop="30dp"
                    android:text="sign in"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_bg"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>